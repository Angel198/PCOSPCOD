<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".patienteditprofile.EditPatientContactFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:id="@+id/nested"
        android:scrollingCache="true"
        android:background="@color/purple_500"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:text="What is your Number?"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/phone_code"
                        android:padding="15dp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:textSize="20sp"
                        android:text="+91"
                        android:drawableEnd="@drawable/ic_expand_arrow_white"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/white"
                        android:drawableRight="@drawable/ic_expand_arrow_white" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/phone_number"
                        android:padding="15dp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:textSize="20sp"
                        android:inputType="number"
                        android:text="9428474299"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/white"/>

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="0000"
        android:padding="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp"
        android:id="@+id/done"
        android:textSize="20sp"
        android:text="DONE"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:background="@drawable/add_border_otp"
        android:gravity="center" />


</RelativeLayout>